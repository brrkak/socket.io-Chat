doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='./public/css/style.css')
        title Noom
  
    body 
    header
       h1(class=`text-3xl`) Noom  
    main
        // LobbyRoom
        div#welcome
            form
                input(placeholder="room name",required,type="text")
                button(class="rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50") Enter Room
        // CallRoom
        div#call
            div#myStream
            video#myFace(autoplay,playsinline, width="400", height="400")  
            button#mute Mute
            button#camera Turn Camera Off 
            select#cameras
            video#peerFace(autoplay,playsinline , width="400", height="400") 
        // ChatRoom
        div#chat
            div#chatList
                form#chatForm
                    input(placeholder="chatting", required, type="text") 
                    button Enter
script(src="/socket.io/socket.io.js")
script(src="/public/js/app.js")
